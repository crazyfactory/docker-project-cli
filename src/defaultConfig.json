{
  "file": "./docker/docker-compose.yml",
  "service": null,
  "exec": true,
  "actions": {
    "down": {
      "command": "%action% %args%",
      "exec": false
    },
    "up": {
      "command": "%action% %args%",
      "exec": false
    },
    "start": {
      "command": "%action% %args%",
      "exec": false
    },
    "stop": {
      "command": "%action% %args%",
      "exec": false
    },
    "bash": "%action% %args%",
    "composer": "%action% %args%",
    "node": {
      "command": "%action% %args%",
      "user": "node"
    },
    "npm": {
      "command": "%action% %args%",
      "user": "node"
    },
    "git": "%action% %args%",
    "yarn": "%action% %args%"
  }
}
